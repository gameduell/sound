<?xml version="1.0" encoding="utf-8"?>
<library xmlns="duell">
    <haxelib name="msignal" version="1.2.2"/>
    <haxelib name="format" version="3.1.2"/>

    <duelllib name="filesystem" version="7.0.0+" />

    <include path="backends/sound_html5/duell_library.xml" if="html5" />
    <include path="backends/sound_android/duell_library.xml" if="android" />
    <include path="backends/sound_ios/duell_library.xml" if="ios" />
    <include path="backends/sound_flash/duell_library.xml" if="flash" />
    <include path="backends/sound_empty/duell_library.xml" unless="html5||android||ios||flash" />

    <platform-config>
        <documentation>
            <documentation-folder library="sound" path="documentation" />
        </documentation>
    </platform-config>

</library>
